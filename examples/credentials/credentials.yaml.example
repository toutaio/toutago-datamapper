# credentials.yaml - Secrets Storage
#
# ⚠️  NEVER COMMIT THIS FILE TO GIT! ⚠️
# Add to .gitignore immediately!
#
# This file stores actual credentials for different environments
# Use environment variable resolution in your config.yaml instead

development:
  database:
    host: localhost
    port: 5432
    name: myapp_dev
    user: developer
    password: "dev_secret_password"
    ssl_mode: disable
  
  redis:
    url: redis://localhost:6379
    password: "redis_dev_password"
  
  aws:
    region: us-east-1
    access_key: "DEV_ACCESS_KEY"
    secret_key: "DEV_SECRET_KEY"

staging:
  database:
    host: staging-db.example.com
    port: 5432
    name: myapp_staging
    user: staging_user
    password: "staging_secret_password"
    ssl_mode: require
  
  redis:
    url: redis://staging-cache.example.com:6379
    password: "redis_staging_password"
  
  aws:
    region: us-east-1
    access_key: "STAGING_ACCESS_KEY"
    secret_key: "STAGING_SECRET_KEY"

production:
  database:
    host: prod-db.example.com
    port: 5432
    name: myapp_production
    user: prod_user
    password: "SUPER_SECRET_PROD_PASSWORD"
    ssl_mode: require
  
  redis:
    url: redis://prod-cache.example.com:6379
    password: "SUPER_SECRET_REDIS_PASSWORD"
  
  aws:
    region: us-east-1
    access_key: "PROD_ACCESS_KEY"
    secret_key: "PROD_SECRET_KEY"
