# MySQL Database Connection Settings
# Copy this file to .env and fill in your actual credentials
# DO NOT commit .env to version control!

# Database Host
DB_HOST=localhost

# Database Port
DB_PORT=3306

# Database User
DB_USER=root

# Database Password (REQUIRED - set your password here)
DB_PASSWORD=your_password_here

# Database Name
DB_NAME=testdb

# SSL Mode (true, false, skip-verify, preferred)
DB_SSL=false

# Full Connection String (alternative to individual settings)
# DB_CONNECTION=root:password@tcp(localhost:3306)/testdb?parseTime=true&tls=false
